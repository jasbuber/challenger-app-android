<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/best_users_profile_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/avatar_small"/>

    <TextView
        android:id="@+id/best_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/best_users_profile_picture"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/best_users_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/best_users_name"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:textColor="@color/font_golden"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/best_users_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/best_users_points"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:text="pts."
        android:textStyle="bold"
        android:textColor="@color/font_golden"/>
</RelativeLayout>